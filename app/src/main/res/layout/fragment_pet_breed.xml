<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.PetBreedFragment">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/open_camera"
        android:layout_below="@id/breed_list"
        android:layout_alignStart="@id/breed_list"
        android:layout_alignEnd="@id/breed_list"
        android:paddingTop="20dp"
        android:text="@string/tab_profile"
        android:src="@drawable/cam_button"
        />

    <ListView
        android:layout_alignParentTop="true"
        android:id="@+id/breed_list"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="wrap_content"
        android:layout_height="600dp"
        android:layout_marginTop="20dp"
        android:foreground="@drawable/breed_list_border"
        >

    </ListView>

</RelativeLayout>